{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Expresso API",
  "colors": {
    "primary": "#cf6a27",
    "light": "#a74f15",
    "dark": "#a74f15"
  },
  "favicon": "/logo/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentaçâo",
        "groups": [
          {
            "group": "Começar agora",
            "pages": ["introducao", "sdk"]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "groups": [
          {
            "group": "Documentação",
            "pages": ["api-reference/introducao", "api-reference/autorizacao"]
          },
          {
            "group": "User Endpoints",
            "icon": "users",
            "pages": [
              "api-reference/users/user",
              "api-reference/users/byRiot"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "HUB Expresso",
          "href": "https://hubexpresso.com.br",
          "icon": "mug-saucer"
        },
        {
          "anchor": "Painel do desenvolvedor",
          "href": "https://dev.hubexpresso.com.br",
          "icon": "gauge"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/favicon.png",
    "dark": "/logo/favicon.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Voltar ao site principal",
        "href": "https://hubexpresso.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/vlrsant",
      "discord": "https://discord.gg/cafedosant"
    }
  },
  "api": {
    "mdx": {
      "server": "https://api.hubexpresso.com/", 
      "auth": {
        "method": "key",
        "name": "Authorization"
      }
    }
  }
}
